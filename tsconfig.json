{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    // … your other flags …
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // skip deep-dive into every .d.ts in node_modules
    "skipLibCheck": true,
    "allowJs": true, // allow JS files to be part of the compilation
    "checkJs": false, // turn off type-check for JS by default
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "server/**/*.ts"],
  "exclude": ["node_modules", "**/*.js", "**/*.jsx"]
}
